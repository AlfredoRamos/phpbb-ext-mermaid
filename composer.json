{
	"name": "alfredoramos/mermaid",
	"type": "phpbb-extension",
	"description": "Mermaid Diagrams extension for phpBB",
	"homepage": "https://github.com/AlfredoRamos/phpbb-ext-mermaid",
	"version": "1.0.0",
	"time": "2025-09-12",
	"keywords": [
		"phpbb",
		"extension",
		"mermaid",
		"diagrams",
		"flowchart",
		"sequence-diagram",
		"class-diagram",
		"state-diagram",
		"entity-relationship-diagram",
		"user-journey",
		"gantt",
		"pie-chart",
		"quadrant-chart",
		"requirement-diagram",
		"git-graph-diagram",
		"c4-diagram",
		"mindmaps",
		"timeline",
		"sankey",
		"xy-chart",
		"block-diagram",
		"packet",
		"kanban",
		"architecture",
		"treemap"
	],
	"license": "GPL-2.0-only",
	"authors": [
		{
			"name": "Alfredo Ramos",
			"email": "alfredo.ramos@proton.me",
			"homepage": "https://alfredoramos.mx",
			"role": "Lead Developer"
		}
	],
	"require": {
		"php": "^7.1.3 || ^8.0.0",
		"composer/installers": "^2.2.0"
	},
	"require-dev": {
		"phing/phing": "^2.16.0",
		"pear/archive_tar": "^1.4.0"
	},
	"suggest": {
		"alfredoramos/markdown": "For Markdown support"
	},
	"extra": {
		"display-name": "Mermaid Diagrams",
		"soft-require": {
			"phpbb/phpbb": "~3.3.0"
		},
		"version-check": {
			"host": "alfredoramos.mx",
			"directory": "/phpbb-extensions/versions",
			"filename": "mermaid.json",
			"ssl": true
		}
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true
		}
	}
}