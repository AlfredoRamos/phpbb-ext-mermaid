{
	"name": "alfredoramos/mermaid",
	"type": "phpbb-extension",
	"description": "Mermaid Diagrams extension for phpBB",
	"homepage": "https://github.com/AlfredoRamos/phpbb-ext-mermaid",
	"version": "0.4.0-dev",
	"time": "2020-01-23",
	"keywords": [
		"phpbb",
		"extension",
		"mermaid",
		"diagrams",
		"flowchart",
		"sequence-diagram",
		"gantt-diagram",
		"class-diagram",
		"entity-relationship-diagram",
		"state-diagram",
		"git-graph",
		"pie-chart"
	],
	"license": "GPL-2.0-only",
	"authors": [
		{
			"name": "Alfredo Ramos",
			"email": "alfredo.ramos@proton.me",
			"homepage": "https://alfredoramos.mx/",
			"role": "Lead Developer"
		}
	],
	"require": {
		"php": "^7.1.3 || ^8.0.0",
		"composer/installers": "^2.2.0"
	},
	"require-dev": {
		"phing/phing": "^3.0.0",
		"pear/archive_tar": "^1.4.0"
	},
	"suggest": {
		"alfredoramos/markdown": "For Markdown support"
	},
	"extra": {
		"display-name": "Mermaid Diagrams",
		"soft-require": {
			"phpbb/phpbb": "~3.3.0"
		},
		"version-check": {
			"host": "alfredoramos.mx",
			"directory": "/phpbb-extensions/versions",
			"filename": "mermaid.json",
			"ssl": true
		}
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true
		}
	}
}